<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"

    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

    <bean id="fileDatabaseService" class="com.sap.cloud.lm.sl.persistence.services.DatabaseFileService" factory-method="getInstance">
        <property name="dataSource" ref="dataSource" />
        <property name="databaseDialect" ref="databaseDialect" />
    </bean>
    
    <bean id="fileSystemFileService" class="com.sap.cloud.lm.sl.persistence.services.FileSystemFileService" factory-method="getInstance">
        <property name="dataSource" ref="dataSource" />
        <property name="databaseDialect" ref="databaseDialect" />
    </bean>
    
    <bean id="fileService" class="com.sap.cloud.lm.sl.cf.web.ds.FileServiceFactoryBean" >
        <property name="serviceName" value="deploy-service-fss"/>
        <property name="fileDatabaseService" ref="fileDatabaseService" />
        <property name="fileSystemFileService" ref="fileSystemFileService"></property>
    </bean>

    <bean id="processLogsPersistenceService" class="com.sap.cloud.lm.sl.slp.services.ProcessLogsPersistenceService"
        factory-method="getInstance">
        <property name="dataSource" ref="dataSource" />
        <property name="databaseDialect" ref="databaseDialect" />
    </bean>

    <bean id="processLoggerProviderFactory" class="com.sap.cloud.lm.sl.slp.services.ProcessLoggerProviderFactory"
        factory-method="getInstance" />

    <bean id="progressMessageService" class="com.sap.cloud.lm.sl.persistence.services.ProgressMessageService"
        factory-method="getInstance">
        <property name="dataSource" ref="dataSource" />
        <property name="databaseDialect" ref="databaseDialect" />
    </bean>

    <bean id="taskExtensionService" class="com.sap.cloud.lm.sl.slp.services.TaskExtensionService" factory-method="getInstance">
        <property name="dataSource" ref="dataSource" />
        <property name="databaseDialect" ref="databaseDialect" />
    </bean>

    <bean class="com.sap.cloud.lm.sl.cf.web.exec.ScheduledThreadPoolExecutorFactoryBean" />

    <bean class="com.sap.cloud.lm.sl.slp.activiti.ActivitiFacade" factory-method="getInstance" />

    <bean class="com.sap.cloud.lm.sl.cf.core.helpers.BeanProvider" factory-method="getInstance" />

    <bean class="com.sap.cloud.lm.sl.slp.activiti.ActivitiService" scope="prototype" />
    <bean class="com.sap.cloud.lm.sl.slp.activiti.ActiveActivitiProcess" scope="prototype" />
    <bean class="com.sap.cloud.lm.sl.slp.activiti.FinishedActivitiProcess" scope="prototype" />

</beans>
